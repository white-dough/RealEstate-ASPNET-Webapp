@model RealEstate.Models.LoginUserModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrappers login-body">
    <div class="login-wrapper">
        <div class="container">
            <div class="loginbox">
                <div class="login-right">
                    <div class="login-right-wrap">
                        <h1>Admin Login Panel</h1>
                        <p class="account-subtitle">Access to our dashboard</p>
                        @if(TempData["message"] != null)
                        {
                            <p style="color:red;">@TempData["message"]</p>
                        }
                        <!-- Form -->
                        <form method="post" action="/admin/Login">
                            <div class="form-group">
                                <input class="form-control" asp-for="UserName" type="text" placeholder="User Name">
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="password" asp-for="Password" placeholder="Password">
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary btn-block" name="login" type="submit">Login</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>